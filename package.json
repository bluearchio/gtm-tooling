{
  "name": "linkedin-auto-apply-extension",
  "version": "1.0.0",
  "description": "Automate your LinkedIn job applications with intelligent filtering and form filling",
  "main": "src/background/service-worker.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --selectProjects='Unit Tests'",
    "test:integration": "jest --selectProjects='Integration Tests'",
    "test:e2e": "jest --selectProjects='E2E Tests'",
    "test:full": "node scripts/test-runner.js all",
    "test:report": "npm run test:coverage && open coverage/test-summary.html",
    "test:quality": "node scripts/test-runner.js all && echo 'Quality gates passed'",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "build": "npm run lint && npm run test:ci",
    "dev": "npm run test:watch",
    "precommit": "npm run lint && npm run test:unit",
    "prepush": "npm run test:full"
  },
  "keywords": [
    "linkedin",
    "automation",
    "chrome-extension",
    "job-application"
  ],
  "author": "LinkedIn Auto-Apply Team",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.5",
    "eslint": "^8.48.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.8.9",
    "sinon": "^15.2.0",
    "sinon-chrome": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.min.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "browser": true,
      "webextensions": true,
      "jest": true
    },
    "globals": {
      "chrome": "readonly"
    }
  }
}